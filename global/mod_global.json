{
    "name": "Global defaults",
    "rs2fPath": "mod_global.rs2f",
    "subtitle": "The first layer of styling and filtering",
    "description": "This provides some default styling options to apply to all items, unless overridden by a module below. This also provides an option to explicitly show and hide specific items. This list however can be overridden in a below modules as well.",
    "inputs": [
        {
            "macroName": "VAR_GLOBAL_CUSTOMSTYLE",
            "label": "Global default style",
            "type": "style",
            "exampleItem": "Santa hat",
            "default": {}
        },
        {
            "macroName": "VAR_GLOBAL_SHOW_ICONS",
            "label": "Show Item Icons",
            "type": "boolean",
            "default": true
        },
        {
            "macroName": "VAR_GLOBAL_DESPAWN_TIMER_MINIMUM_VALUE",
            "label": "Hide despawn timer for items below this value",
            "type": "number",
            "default": 0
        },
        {
            "macroName": "VAR_GLOBAL_SHOW_PRICES_MINIMUM_VALUE",
            "label": "Hide prices for items below this value",
            "type": "number",
            "default": 0
        },
        {
            "macroName": {
                "includes": "VAR_GLOBAL_SHOW",
                "excludes": "VAR_GLOBAL_HIDE"
            },
            "label": "Global itemlist",
            "type": "includeExcludeList",
            "default": {
                "includes": [],
                "excludes": []
            }
        },
        {
            "macroName": "VAR_GLOBAL_MINIMUM_VALUE",
            "label": "Hide items below this value",
            "group": "Global Value Filters",
            "type": "number",
            "default": 0
        },
        {
            "macroName": "VAR_GLOBAL_STACKABLE_MINIMUM_VALUE",
            "label": "Hide stackable and noted items below this value",
            "group": "Global Value Filters",
            "type": "number",
            "default": 0
        },
        {
            "macroName": "VAR_GLOBAL_NON_STACKABLE_MINIMUM_VALUE",
            "label": "Hide non-stackable items below this value",
            "group": "Global Value Filters",
            "type": "number",
            "default": 0
        }
    ]
}
